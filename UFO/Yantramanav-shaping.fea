# ---------- Akhand letters -------------

feature akhn {

    script DFLT;
        
            lookup Akhand {
          
                sub kadeva viramadeva ssadeva by kassadeva;
                sub jadeva viramadeva nyadeva by janyadeva;
          
            } Akhand;
        
            lookup EyelashRa {      
                sub radeva' viramadeva' uni200D by raprehalfdeva;
                sub rradeva' viramadeva' uni200D by ranuktaprehalfdeva;     
            } EyelashRa;

    script dev2;
            lookup Akhand;
            lookup EyelashRa;  
    
    script deva;
            lookup Akhand;

} akhn;

